<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <% include ../partials/head.ejs %>
    <link rel="stylesheet" href="../css/style.css">
    <title></title>
  </head>
  <body>
    <%include ../partials/navbar.ejs %>


    <div class="container">
      <div class="btn-container">
      <a class= "edit-btn" href="/users/<%=user.id%>/edit"><i class="far fa-edit"></i> Edit Profile</a>
      <form action="/users/<%=user.id%>?_method=DELETE" method="POST">
        <button class="delete-btn" type="submit"><i class="fas fa-trash-alt"></i> Delete Profile</button>
      </form>
      </div>
      <div class="user-container">
    <% if(user.img) { %>
        <img src="../<%=user.img%>">
    <% } %>

    <h2><%=user.firstName%> <%=user.lastName%></h2>
    <p class="username"><%=user.username%></p>

    <p class="info"><%=user.city%>, <%=user.state%></p>
  </div>


    <div class="liked-container">
    <% if (user.liked.length > 0) { %>
        <% for (let i = 0; i < user.liked.length; i++) { %>
          <a class="<%=user.liked[i].category%>" href="/vendors/<%=user.liked[i]%>"><%=user.liked[i].name%></a>
        <% } %>
    <% } %>
    </div>
    </div>
  </body>
</html>
